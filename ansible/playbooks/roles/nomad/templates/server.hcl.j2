{% raw %}

data_dir = "/tmp/nomad/server"

server {
  enabled          = true
  bootstrap_expect = 1
  job_gc_threshold = "2m"
}

datacenter = "echin1"

region = "east"

advertise {
  http = "{{ GetInterfaceIP `eth1` }}"
  rpc  = "{{ GetInterfaceIP `eth1` }}"
  serf = "{{ GetInterfaceIP `eth1` }}"
}

plugin "raw_exec" {
  config {
    enabled = true
  }
}

{% endraw %}
